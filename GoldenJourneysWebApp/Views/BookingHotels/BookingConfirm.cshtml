@model HBookingConfirmationViewModel
@{
	Layout = "_CustomerLayout";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Booking Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-2"><strong class="text-muted">User Name:</strong> @Model.userName</p>
                            <p class="mb-2"><strong class="text-muted">Room Name:</strong> @Model.roomName</p>
                            <p class="mb-2"><strong class="text-muted">Selected Room Quantity:</strong> @Model.selectedQty</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong class="text-muted">Selected From Date:</strong> @Model.selectedStartDate.ToString("yyyy-MM-dd")</p>
                            <p class="mb-2"><strong class="text-muted">Selected To Date:</strong> @Model.selectedEndDate.ToString("yyyy-MM-dd")</p>
                            <p class="mb-2"><strong class="text-muted">Special Request:</strong> @Model.specialRequest</p>
                            <p class="mb-2"><strong class="text-muted">Total Price:</strong> @Model.totalPrice</p>
                        </div>
                    </div>
                </div>
            </div>

            <form method="post" class="card shadow-sm">
                <input type="hidden" asp-for="userId" value="@Model.userId" />
                <input type="hidden" asp-for="roomName" value="@Model.roomName" />
                <input type="hidden" asp-for="roomId" value="@Model.roomId" />
                <input type="hidden" asp-for="selectedQty" value="@Model.selectedQty" />
                <input type="hidden" asp-for="selectedStartDate" value="@Model.selectedStartDate" />
                <input type="hidden" asp-for="selectedEndDate" value="@Model.selectedEndDate" />
                <input type="hidden" asp-for="totalPrice" value="@Model.totalPrice" />
                <input type="hidden" asp-for="userName" value="@Model.userName" />

                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">Payment Information</h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="cardNumber" class="form-label">Card Number</label>
                            <input type="text" class="form-control form-control-lg" id="cardNumber" placeholder="Enter card number" />
                        </div>
                        <div class="col-md-3">
                            <label for="expiryDate" class="form-label">Expiry Date</label>
                            <input type="text" class="form-control form-control-lg" id="expiryDate" placeholder="MM/YY" />
                        </div>
                        <div class="col-md-3">
                            <label for="cvv" class="form-label">CVV</label>
                            <input type="text" class="form-control form-control-lg" id="cvv" placeholder="CVV" />
                        </div>
                        <div class="col-12">
                            <label for="cardHolderName" class="form-label">Cardholder Name</label>
                            <input type="text" class="form-control form-control-lg" id="cardHolderName" placeholder="Enter cardholder name" />
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-outline-secondary" asp-controller="BookingHotels" asp-action="GetRoomDetails" asp-route-roomId="@Model.roomId">Cancel</a>
                    <button type="submit" class="btn btn-success">Submit Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>
