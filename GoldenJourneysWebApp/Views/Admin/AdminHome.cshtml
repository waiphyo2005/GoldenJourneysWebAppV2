@model AdminHomeViewModel
@{
	Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">Admin Dashboard</h1>

    <div class="row">
        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Users</h5>
                    <h2 class="card-text">@Model.users</h2>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Admins</h5>
                    <h2 class="card-text">@Model.admins</h2>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Customers</h5>
                    <h2 class="card-text">@Model.admins</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Hotels</h5>
                    <h2 class="card-text">@Model.hotels</h2>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Tour Packages</h5>
                    <h2 class="card-text">@Model.tours</h2>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Bookings</h5>
                    <h2 class="card-text">@Model.bookings</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 offset-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Cancelled Bookings</h5>
                    <h2 class="card-text">@Model.bookingCancelled</h2>
                </div>
            </div>
        </div>
    </div>
</div>

