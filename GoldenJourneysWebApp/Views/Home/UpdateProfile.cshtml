@model AccountProfileViewModel
@{
    Layout = "_CustomerLayout";
}
<h2 class="text-center mb-5">Edit User Account</h2>

<form method="post" class="container">

    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input type="text" asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input type="email" asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="CustomerProfile">Cancel</a>
</form>