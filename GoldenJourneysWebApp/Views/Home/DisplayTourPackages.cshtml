@model List<UserAllToursViewModel>
@{
	Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="text-center mb-5">Tour Packages</h1>
    <div class="row">
        @if(Model.Count() != 0)
        {
            @foreach (var package in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="row g-0">
                            <!-- Thumbnail Image -->
                            <div class="col-md-4">
                                <img src="~/TourImages/@package.thumbnailImage"
                                     class="img-fluid rounded-start"
                                     alt="@package.tourName"
                                     style="width: 100%; height: 200px; object-fit: cover;">
                            </div>

                            <!-- Package Details -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="card-title text-primary mb-2">@package.tourName</h3>
                                        <h4 class="text-success mb-0">From $@package.price</h4>
                                    </div>
                                    <p class="text-muted mb-2">@package.StateorRegion</p>
                                    <h5 class="mb-0"> @package.type Tour</h5>
                                    <div class="text-end mt-2">
                                        <a class="btn btn-primary" asp-controller="BookingTours" asp-action="SelectedTourBooking" asp-route-tourId="@package.tourId">Show Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3 class="text-center text-danger">No Tour Available at the moment...</h3>
        }
    </div>
</div>
