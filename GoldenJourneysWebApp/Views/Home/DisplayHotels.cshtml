@model List<UserAllHotelsViewModel>
@{
	Layout = "_Layout";
}
<div class="container mt-4">
    <h1 class="text-center mb-5">Hotels</h1>
    <div class="row">
        @if (Model.Count() != 0)
        {
            @foreach (var hotel in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="row g-0">
                            <!-- Thumbnail Image -->
                            <div class="col-md-4">
                                <img src="~/HotelImages/@hotel.thumbnailImage"
                                     class="img-fluid rounded-start"
                                     alt="@hotel.HotelName"
                                     style="width: 100%; height: 200px; object-fit: cover;">
                            </div>

                            <!-- Hotel Details -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="card-title text-primary mb-2">@hotel.HotelName</h3>
                                        <h4 class="text-success mb-0">
                                            @for (int i = 0; i < hotel.hotelStars; i++)
                                            {
                                                @("☆")
                                                ;
                                            }
                                        </h4>
                                    </div>
                                    <p class="text-muted mb-2">@hotel.hotelType</p>
                                    <h5 class="mb-0">@hotel.RegionorState</h5>
                                    <div class="text-end mt-2">
                                        <a class="btn btn-primary" asp-controller="BookingHotels" asp-action="GetHotelDetails" asp-route-hotelId="@hotel.hotelId">Show Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3 class="text-center text-danger">No Hotels Available at the moment...</h3>
        }
    </div>
</div>