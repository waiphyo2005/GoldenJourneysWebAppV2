@model TourGalleryModel
@{
	Layout = "_AdminLayout";
}
<div class="text-center">
    <!-- Image -->
    <img src="~/TourImages/@Model.MediaUrl" class="img-fluid mb-3" style="width: 400px; height: 300px;" alt="@Model.Title">

    <!-- Confirmation Message -->
    <h4>Are you sure you want to delete this image?</h4>

    <!-- Buttons for Confirming or Cancelling -->
    <div class="mt-4">
        <a class="btn btn-danger" asp-controller="Tour" asp-action="RemoveImage" asp-route-id="@Model.Id" asp-route-tourId="@Model.TourId">Yes, Delete</a>
        <a class="btn btn-secondary" asp-controller="Tour" asp-action="EditGallery" asp-route-id="@Model.TourId">Cancel</a>
    </div>
</div>
