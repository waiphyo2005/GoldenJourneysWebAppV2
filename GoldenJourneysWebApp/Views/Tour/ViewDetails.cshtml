@model TourViewModel
@{
	Layout = "_AdminLayout";
}
<h2 class="text-center mb-5">@Model.Name</h2>

<form method="post" class="container" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Id" class="form-label"></label>
        <input type="number" asp-for="Id" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input type="text" asp-for="Type" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input type="text" asp-for="Location" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input type="number" asp-for="Price" class="form-control" min="0" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" readonly></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Created" class="form-label"></label>
        <input type="date" asp-for="Created" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input type="text" asp-for="Status" class="form-control" readonly />
    </div>

    <div class="container mt-4">
        <label class="form-label">Tour Package Images</label>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
            @if(Model.ImageURLs.Count() != 0)
            {
                @foreach (var imageUrl in Model.ImageURLs)
                {
                    <div class="col">
                        <div class="card">
                            <img src="~/TourImages/@imageUrl" class="card-img-top" alt="Image" style="object-fit: cover; width: 100%; height: 200px;">
                        </div>
                    </div>
                }
            }
            else{
                <p class="form-control text-danger">No Image Provided.</p>
            }
        </div>
    </div>




    @* <h4 class="mb-5">Please Select the Date Range and Capacity of each date that will be avaliable.</h4>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input type="date" asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input type="date" asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input type="number" asp-for="Capacity" class="form-control" min="1" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div> *@

    @* <button type="submit" class="btn btn-primary">Create Tour</button> *@
    <a class="btn btn-primary mt-5" asp-controller="Tour" asp-action="Index">Cancel</a>
</form>
