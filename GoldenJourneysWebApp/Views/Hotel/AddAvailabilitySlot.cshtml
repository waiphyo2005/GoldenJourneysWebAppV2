@model AddRoomAvailabilityViewModel
@{
	Layout = "_AdminLayout";
}
<h2 class="text-center mb-5">Add Room Available Slot</h2>
<form method="post" class="container">

    <input type="number" asp-for="roomId" value="@ViewData["roomId"]" class="form-control" hidden />

    <h4 class="mb-5">Please Select the Date Range and Capacity of each date that will be avaliable.</h4>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input type="date" asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input type="date" asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input type="number" asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-primary" asp-controller="Hotel" asp-action="ViewAvailabilitySlots" asp-route-roomId="@ViewData["roomId"]">Cancel</a>
</form>
